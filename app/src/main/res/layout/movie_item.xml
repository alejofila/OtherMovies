<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="?attr/selectableItemBackground"
              android:orientation="vertical">


    <ImageView
            android:id="@+id/item_poster_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            />

    <LinearLayout
            android:padding="10dp"
            android:id="@+id/item_poster_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="0.7"
            tools:background="@color/colorPrimaryDark">


        <TextView
                android:id="@+id/item_poster_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="title"
                style="@style/TextViewTitle"/>

        <TextView
                android:id="@+id/item_poster_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="title"
                style="@style/TextViewOverview"/>

        <TextView
                android:id="@+id/item_poster_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextViewRelease"
                />
    </LinearLayout>


</LinearLayout>